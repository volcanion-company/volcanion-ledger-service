		{
			"name": "Complete Workflow Example",
			"item": [
				{
					"name": "1. Create Account",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save account ID and user ID for subsequent requests",
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"accountId\", jsonData.id);",
									"    pm.environment.set(\"userId\", jsonData.userId);",
									"    pm.environment.set(\"accountNumber\", jsonData.accountNumber);",
									"    console.log(\"Account created: \" + jsonData.accountNumber);",
									"}"
								],
								"type": "text/javascript"
							}
